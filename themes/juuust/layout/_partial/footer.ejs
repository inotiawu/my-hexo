<%
  const social = config.social || theme.social
  const weixin = social.weixin
%>
<footer class="footer text-center">
  <div class="container">
    <% if (weixin) { %>
      <div class="footer-qrcode text-center">
        <img src="<%- weixin %>"/>
      </div>
    <% } %>
    <div class="footer-social">
      <% if (social) { %>
        <% _.forIn(social, function(val, key){ %>
          <% if (key !== 'weixin') { %>
            <a href="<%- val %>" class="icon icon-<%- key %>" target="_blank">
              <img src="<%- `/images/${key}.svg` %>">
            </a>
          <% } %>
        <% }) %>
      <% } %>
    </div>
    <div>
      <span><%- config.title %> &copy; <%= (new Date()).getFullYear() %></span>
      <% if(config.footer !== null) { %>
        <span class="split">|</span>
        <span><%- config.footer || theme.footer %></span>
      <% } %>
    </div>
  </div>
</footer>
